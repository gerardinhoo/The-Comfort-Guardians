NODE_ENV=production
PORT=8080

# Comma-separated allowlist for CORS (prod + preview)
CORS_ORIGINS=https://comfortguardians.com,https://www.comfortguardians.com,https://<your-vercel>.vercel.app

# Render disk path for Jobber tokens
TOKENS_FILE=/data/jobber-tokens.json

# Jobber OAuth
JOBBER_AUTH_URL=https://my.getjobber.com/oauth/authorize
JOBBER_TOKEN_URL=https://my.getjobber.com/oauth/token
JOBBER_CLIENT_ID=
JOBBER_CLIENT_SECRET=
JOBBER_REDIRECT_URI=https://<render-service>.onrender.com/integrations/jobber/callback

# Jobber GraphQL
JOBBER_API_BASE=https://api.getjobber.com
JOBBER_GRAPHQL_PATH=/api/graphql
JOBBER_API_VERSION=2025-01-20
